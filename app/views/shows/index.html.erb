<ul class="yearsCircles">
  <% prev_left = 0 %>
  <% @years.each_with_index do |year, i| %>
  <li style="background: <%= random_css_color %>;">
    <%= link_to "<span>#{year}</span>".html_safe, '#' %>
  </li>
  <% end %>
</ul>

<% content_for :javascripts do %>
  <%= javascript_include_tag "circle_event_manager" %>
  <script type="text/javascript">
  $(function() {

    var $circles = $('ul.yearsCircles li')
      , leftAccum = 0;

    $circles

      .find('a')
        .circlemouse({
          onMouseEnter: function(el) {
            el.addClass('hover');
          },
          onMouseLeave: function(el) {
            el.removeClass('hover');
          },
        })
      .end()

      .each(function(idx, el) {
        $(el)
          .css('left', leftAccum);
          leftAccum = ((idx + 1) / ($circles.length + 1)) * $(window).width();
      });
  });
  </script>
<% end %>
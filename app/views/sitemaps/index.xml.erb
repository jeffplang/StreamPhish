<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <sitemap>
    <loc><%= sections_sitemaps_url(format: :xml) %></loc>
    <lastmod><%= Time.now.strftime("%Y-%m-%dT%H:%M:%SZ") %></lastmod>
  </sitemap>              
  <sitemap>
    <loc><%= songs_sitemaps_url(format: :xml) %></loc>
    <lastmod><%= Time.now.strftime("%Y-%m-%dT%H:%M:%SZ") %></lastmod>
  </sitemap>
  <%- @years.each do |year| %>
  <sitemap>
    <loc><%= shows_by_year_sitemaps_url(year: year[:year], format: :xml) %></loc>
  </sitemap>
  <% end %>
</sitemapindex>
